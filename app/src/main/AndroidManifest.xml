<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sampletmdb">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.list.view.MoviesActivity"
            android:label="@string/title_movies"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.detail.view.MovieDetailActivity"
            android:label="@string/title_movie_detail"
            android:screenOrientation="portrait" />

        <activity
            android:name=".presentation.booking.view.BookMovieWebViewActivity"
            android:label="@string/title_book_movie"
            android:screenOrientation="portrait" />
    </application>
</manifest>